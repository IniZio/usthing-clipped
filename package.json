{
  "name": "clipped",
  "version": "0.2.7",
  "description": "Tool to handle scaffold, dev, build and deploy",
  "main": "dist/index.js",
  "bin": {
    "clipped": "dist/clipping.js"
  },
  "scripts": {
    "flow": "flow",
    "flow-typed": "flow-typed",
    "standard": "standard",
    "snazzy": "snazzy",
    "flow-copy-source": "flow-copy-source",
    "flow:check": "flow check ./src/",
    "flow:copy-source": "flow-copy-source src dist",
    "flow:build": "npm run flow:check && flow-remove-types ./src/ -d ./dist/ --all --pretty",
    "flow:deps": "flow-typed install",
    "standard:lint": "standard --verbose --fix | snazzy",
    "dev": "nodemon --watch src --exec npm run flow:build",
    "build": "npm run standard:lint && npm run flow:build && npm run flow:copy-source",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "pre-commit": [
    "flow:check",
    "build"
  ],
  "standard": {
    "globals": [
      "clippedConfig",
      "stream$Readable",
      "stream$Readable"
    ],
    "ignore": [
      "**/flow-typed/",
      "**/dist/"
    ],
    "parser": "babel-eslint",
    "extends": [
      "plugin:flowtype/recommended"
    ],
    "plugins": [
      "flowtype"
    ],
    "rules": {
      "define-flow-type": 1,
      "use-flow-type": 1,
      "flowtype/define-flow-type": 2
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IniZio/usthing-clipped.git"
  },
  "author": "IniZio",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/IniZio/usthing-clipped/issues"
  },
  "homepage": "https://github.com/IniZio/usthing-clipped#readme",
  "dependencies": {
    "cross-spawn": "^5.1.0",
    "dockerode": "^2.5.3",
    "graceful-ncp": "^3.0.0",
    "minimist": "^1.2.0",
    "mkdirp": "^0.5.1",
    "rimraf": "^2.6.2"
  },
  "devDependencies": {
    "babel-eslint": "^8.0.2",
    "eslint-plugin-flowtype": "^2.39.1",
    "flow-bin": "^0.59.0",
    "flow-copy-source": "^1.2.1",
    "flow-remove-types": "^1.2.3",
    "flow-typed": "^2.2.3",
    "pre-commit": "^1.2.2",
    "snazzy": "^7.0.0",
    "standard": "^10.0.3"
  }
}
