{
  "private": true,
  "workspaces": [
    "packages/*",
    "generators/*",
    "presets/*"
  ],
  "scripts": {
    "commit": "git-cz",
    "test:all": "lerna run build && nyc --reporter=html --reporter=text mocha packages/*/test presets/*/test",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov"
  },
  "devDependencies": {
    "codecov": "^3.0.0",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.1.0",
    "lerna": "^2.5.1",
    "mocha": "^5.0.0",
    "nyc": "^11.4.1"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  }
}
